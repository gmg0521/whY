<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/yditorItemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/yditorImg"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/yditorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="주간 whY"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/yditorImg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/yditorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="와이디터 A"
            android:textColor="@android:color/darker_gray"
            android:textSize="9sp"
            app:layout_constraintStart_toEndOf="@+id/yditorImg"
            app:layout_constraintTop_toBottomOf="@+id/yditorTitle" />

        <TextView
            android:id="@+id/yditorDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="당신을 자극 하는 이번주의 'whY'는 무엇이었나요?"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/yditorImg"
            app:layout_constraintTop_toBottomOf="@+id/yditorName" />
    </LinearLayout>

</LinearLayout>